generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum  Role {
  Admin
  Provider
  User
}
model User {
  id       String   @id @default(uuid())
  email     String   @unique
  name      String?
  role     Role     @default(User)
  password  String
  meals  meal[]
  orders  Order[]
  cart    Cart[]
}
model meal {
  id       String   @id @default(uuid())
  name      String
  price     Float
  image     String
  tags     String[]
  type     String
  providerId String
  provider User @relation(fields: [providerId], references: [id])
  orders   Order[]
  cart     Cart[]
}
model Order {
  id        String   @id @default(uuid())
  userId    String
  mealId    String
  quantity  Int
  total     Float
  status    String   @default("Pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  meal meal @relation(fields: [mealId], references: [id])
}

model Cart {
  id       String   @id @default(uuid())
  userId    String
  mealId    String
  quantity  Int

  user User @relation(fields: [userId], references: [id])
  meal meal @relation(fields: [mealId], references: [id])
}